{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "payment/*": [
                "payment/src"
            ],
            "validate-order/*": [
                "validated-order/src"
            ],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "/**/*"
    ],
    "exclude": [
        "/**/*.test.ts"
    ]
}